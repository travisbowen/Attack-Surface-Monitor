<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Attack Surface Monitor Report</title>
    <style>
      body { font-family: Arial, sans-serif; margin: 24px; }
      h1, h2 { margin-bottom: 8px; }
      .meta { color: #444; margin-bottom: 18px; }
      table { border-collapse: collapse; width: 100%; }
      th, td { border: 1px solid #ddd; padding: 8px; vertical-align: top; }
      th { background: #f5f5f5; text-align: left; }
      .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
      .muted { color: #666; }
      .error { color: #a00; }
    </style>
  </head>
  <body>
    <h1>Attack Surface Monitor</h1>
    <div class="meta">
      <div><b>Domain:</b> <span class="mono">{{ domain }}</span></div>
      <div><b>Assets:</b> {{ assets | length }} hosts</div>
      <div><b>HTTP Findings:</b> {{ http_findings | length }} attempted URLs</div>
    </div>

    <h2>Assets</h2>
    <table>
      <thead>
        <tr>
          <th>Host</th>
          <th>IPs</th>
        </tr>
      </thead>
      <tbody>
        {% for a in assets %}
        <tr>
          <td class="mono">{{ a.host }}</td>
          <td class="mono muted">{{ a.ips | join(", ") }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

    <h2 style="margin-top: 24px;">HTTP Probing</h2>
    <table>
      <thead>
        <tr>
          <th>URL</th>
          <th>Status</th>
          <th>Final URL</th>
          <th>Title</th>
          <th>Server</th>
          <th>TLS notAfter</th>
          <th>Error</th>
        </tr>
      </thead>
      <tbody>
        {% for f in http_findings %}
        <tr>
          <td class="mono">{{ f.url }}</td>
          <td>{{ f.status_code if f.status_code is not none else "" }}</td>
          <td class="mono muted">{{ f.final_url or "" }}</td>
          <td>{{ f.title or "" }}</td>
          <td class="mono muted">{{ f.server or "" }}</td>
          <td class="mono muted">{{ f.tls_not_after or "" }}</td>
          <td class="error">{{ f.error or "" }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </body>
</html>
